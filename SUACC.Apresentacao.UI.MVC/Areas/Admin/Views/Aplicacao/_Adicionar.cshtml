<form id="frmAplicacaoAdicionar" style="min-width:450px;">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">×</button>
        <h3 class="modal-title">Adicionar Aplicação</h3>
    </div>
    <div class="modal-body">

        <div class="form-group">
            <div class="row">
                <div class="col-sm-12">
                    <label>Nome</label>
                    <input type="text" id="AplicacaoAdicionar_Nome" placeholder="Nome" class="form-control">
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-12">
                    <label>URL</label>
                    <input type="text" id="AplicacaoAdicionar_Url" placeholder="URL" class="form-control">
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="checkbox checkbox-right checkbox-switchery">
                <label>
                    <input type="checkbox" id="AplicacaoAdicionar_Ssl" class="switchery" checked="checked">
                    SSL
                </label>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-link" data-dismiss="modal">Cancelar</button>
        <button type="button" id="Aplicacao_Adicionar" class="btn btn-primary btn-ladda btn-ladda-progress" data-style="zoom-in" onclick="adicionarAplicacao();"><span class="ladda-label">Salvar</span></button>
    </div>
</form>

